- if @polls.any?
  %h1 Опросы
  #polls
    %table.table
      %tr
        %th Id
        %th Poll
        %th Total Votes
      - @polls.each do |poll|
        %tr
          %td= poll.id
          %td= link_to poll.name, poll
          %td= poll.votes_count

:javascript
  $(function() {
    window.pollsRouter = new BackboneHackaton.Routers.PollsRouter({polls: #{@polls.to_json.html_safe}});
    Backbone.history.start();
  });
